<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="180dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/login1_logo"
        android:layout_width="237dp"
        android:layout_height="194dp"
        android:src="@drawable/img_logo_login1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/login1_logo">

        <ImageButton
            android:id="@+id/kakao_login1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="134dp"
            android:background="@drawable/box_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/con_layout"
            android:contentDescription="카카오 로그인 버튼"/>
        <TextView
            android:id="@+id/txt_kakao_login1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_medium"
            android:text="카카오 로그인"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/kakao_login1"
            app:layout_constraintEnd_toEndOf="@id/kakao_login1"
            app:layout_constraintTop_toTopOf="@id/kakao_login1"
            app:layout_constraintBottom_toBottomOf="@id/kakao_login1"/>

        <ImageButton
            android:id="@+id/google_login1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/box_gray3_bttn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kakao_login1"
            android:contentDescription="구글 로그인 버튼"/>
        <TextView
            android:id="@+id/txt_google_login1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_medium"
            android:text="구글 로그인"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/google_login1"
            app:layout_constraintEnd_toEndOf="@id/google_login1"
            app:layout_constraintTop_toTopOf="@id/google_login1"
            app:layout_constraintBottom_toBottomOf="@id/google_login1"/>

        <ImageButton
            android:id="@+id/savewith_btn"
            android:layout_width="123dp"
            android:layout_height="48dp"
            android:background="@drawable/box_white1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_savewith_login1"
            app:layout_constraintBottom_toBottomOf="@id/txt_savewith_login1"
            android:contentDescription="세이브위드 로그인 버튼"/>
        <TextView
            android:id="@+id/txt_savewith_login1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/suit_medium"
            android:text="세이브위드 로그인"
            android:textColor="@color/main"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/google_login1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>