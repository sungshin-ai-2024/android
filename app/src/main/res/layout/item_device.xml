<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="device"
            type="com.example.savewith_android.ItemDevice"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sett_box1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/sett1_user_box"
            android:layout_width="27dp"
            android:layout_height="49dp"
            android:background="@drawable/img_devie"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="기기 이미지"/>
        <TextView
            android:id="@+id/sett1_box1_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_semibold"
            android:layout_marginStart="27dp"
            android:text="수정"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/sett1_user_box"
            app:layout_constraintTop_toTopOf="@id/sett_box1"/>
        <TextView
            android:id="@+id/sett1_box1_phone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_semibold"
            android:layout_marginStart="0dp"
            android:text="의 "
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/sett1_box1_phone"
            app:layout_constraintTop_toTopOf="@id/sett_box1"/>
        <TextView
            android:id="@+id/sett1_box1_phone3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_semibold"
            android:layout_marginStart="0dp"
            android:text="S22"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/sett1_box1_phone2"
            app:layout_constraintTop_toTopOf="@id/sett_box1"/>
        <TextView
            android:id="@+id/sett1_box1_phone_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_medium"
            android:layout_marginStart="27dp"
            android:layout_marginTop="3dp"
            android:text="Galaxy S22"
            android:textColor="@color/gray2"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/sett1_user_box"
            app:layout_constraintTop_toBottomOf="@id/sett1_box1_phone"/>
        <TextView
            android:id="@+id/sett1_box1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_medium"
            android:layout_marginStart="27dp"
            android:layout_marginTop="3dp"
            android:text="2022. 07. 26. 오후 11:41. 대한민국"
            android:textColor="@color/gray2"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/sett1_user_box"
            app:layout_constraintTop_toBottomOf="@id/sett1_box1_phone_v"/>

        <ImageButton
            android:id="@+id/ic_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="290dp"
            android:background="@drawable/img_dot_vertical"
            android:contentDescription="연결 기긱 수정"
            app:layout_constraintStart_toEndOf="@id/sett1_user_box"
            app:layout_constraintTop_toTopOf="@id/sett1_box1_phone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>