<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="13dp"
    tools:context=".CkAccessActivity">

    <ImageView
        android:id="@+id/left"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/box_white1"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="뒤로 가기"/>

    <ImageView
        android:id="@+id/logo_top"
        android:layout_width="127dp"
        android:layout_height="35dp"
        android:src="@drawable/img_logo_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v1_main"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray4"
        app:layout_constraintTop_toBottomOf="@id/left" />

    <ImageView
        android:id="@+id/box_gray"
        android:src="@drawable/box_gray4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/v1_main">

        <ImageView
            android:id="@+id/box_white"
            android:src="@drawable/box_white2"
            android:layout_width="match_parent"
            android:layout_height="614dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_access0"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:fontFamily="@font/suit_bold"
            android:text="편리한 서비스 이용을 위한\n접근 권한 허용이 필요합니다."
            android:textColor="@color/font"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@id/box_white"
            app:layout_constraintStart_toStartOf="@id/box_white"
            app:layout_constraintTop_toTopOf="@id/box_white"/>

        <TextView
            android:id="@+id/txt_access10"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/suit_bold"
            android:text="카메라/저장공간 (선택)"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access0"
            app:layout_constraintStart_toStartOf="@id/txt_access0"
            app:layout_constraintTop_toBottomOf="@id/txt_access0"/>
        <TextView
            android:id="@+id/txt_access11"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/suit_regular"
            android:text="프로필 사진 설정"
            android:textColor="@color/gray2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access10"
            app:layout_constraintStart_toStartOf="@id/txt_access10"
            app:layout_constraintTop_toBottomOf="@id/txt_access10"/>

        <TextView
            android:id="@+id/txt_access20"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/suit_bold"
            android:text="위치정보 (선택)"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access11"
            app:layout_constraintStart_toStartOf="@id/txt_access11"
            app:layout_constraintTop_toBottomOf="@id/txt_access11"/>
        <TextView
            android:id="@+id/txt_access21"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/suit_regular"
            android:text="사용자 주변 위치 탐색"
            android:textColor="@color/gray2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access20"
            app:layout_constraintStart_toStartOf="@id/txt_access20"
            app:layout_constraintTop_toBottomOf="@id/txt_access20"/>

        <TextView
            android:id="@+id/txt_access30"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/suit_bold"
            android:text="알림 (선택)"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access21"
            app:layout_constraintStart_toStartOf="@id/txt_access21"
            app:layout_constraintTop_toBottomOf="@id/txt_access21"/>
        <TextView
            android:id="@+id/txt_access31"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/suit_regular"
            android:text="앱 알림"
            android:textColor="@color/gray2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access30"
            app:layout_constraintStart_toStartOf="@id/txt_access30"
            app:layout_constraintTop_toBottomOf="@id/txt_access30"/>

        <TextView
            android:id="@+id/txt_access40"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/suit_bold"
            android:text="생체 신호 센서 (선택)"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access31"
            app:layout_constraintStart_toStartOf="@id/txt_access31"
            app:layout_constraintTop_toBottomOf="@id/txt_access31"/>
        <TextView
            android:id="@+id/txt_access41"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/suit_regular"
            android:text="심박수, 혈중 산소, 스트레스와 같은\n측정 결과를 제공"
            android:textColor="@color/gray2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access40"
            app:layout_constraintStart_toStartOf="@id/txt_access40"
            app:layout_constraintTop_toBottomOf="@id/txt_access40"/>

        <TextView
            android:id="@+id/txt_access50"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/suit_bold"
            android:text="전화 (선택)"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access41"
            app:layout_constraintStart_toStartOf="@id/txt_access41"
            app:layout_constraintTop_toBottomOf="@id/txt_access41"/>
        <TextView
            android:id="@+id/txt_access51"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/suit_regular"
            android:text="연락처를 저장한 사람이\n나를 찾을 수 있도록 전화번호 확인"
            android:textColor="@color/gray2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access50"
            app:layout_constraintStart_toStartOf="@id/txt_access50"
            app:layout_constraintTop_toBottomOf="@id/txt_access50"/>

        <TextView
            android:id="@+id/txt_access6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:gravity="center"
            android:fontFamily="@font/suit_semibold"
            android:text="해당 기능 이용 시 동의를 받고 있으며,\n허용하지 않아도 서비스는 이용 가능합니다."
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/txt_access51"
            app:layout_constraintStart_toStartOf="@id/txt_access51"
            app:layout_constraintTop_toBottomOf="@id/txt_access51"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:id="@+id/btn_ok"
        android:layout_width="219dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/box_sub2_bttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/con_layout"
        android:contentDescription="접근 권한 확인 버튼"/>
    <TextView
        android:id="@+id/txt_signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suit_semibold"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/btn_ok"
        app:layout_constraintEnd_toEndOf="@id/btn_ok"
        app:layout_constraintTop_toTopOf="@id/btn_ok"
        app:layout_constraintBottom_toBottomOf="@id/btn_ok"/>

</androidx.constraintlayout.widget.ConstraintLayout>