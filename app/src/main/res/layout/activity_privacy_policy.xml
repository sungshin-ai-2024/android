<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    tools:context=".PrivacyActivity">

    <ImageView
        android:id="@+id/left"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/box_white1"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="뒤로 가기"/>

    <TextView
        android:id="@+id/txt_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/suit_bold"
        android:text="개인정보 처리방침"
        android:textColor="@color/font"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/v1_main"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/left"/>

    <ImageView
        android:id="@+id/box_gray"
        android:src="@drawable/box_gray4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/v1_main"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/v1_main">
        <ImageView
            android:id="@+id/box_white"
            android:src="@drawable/box_white2"
            android:layout_width="match_parent"
            android:layout_height="614dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="46dp"
            app:layout_constraintTop_toTopOf="@id/box_white"
            app:layout_constraintHorizontal_bias="1.0">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/con_layout1"
                app:layout_constraintStart_toStartOf="@id/con_layout1"
                app:layout_constraintEnd_toEndOf="@id/con_layout1"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l1_con1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="9dp"
                    android:layout_weight="5.5">
                    <TextView
                        android:id="@+id/policy1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/suit_bold"
                        android:text="1.\t\t개인정보의 수집/이용 목적, 수집하는\n\t\t\t개인정보의 항목 및 수집방법"
                        android:textColor="@color/font"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l1_con2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/policy1_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/img_right_gray3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="정책1 버튼"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <View
                android:id="@+id/policy_l1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/gray3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear1" />

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/policy_l1"
                app:layout_constraintStart_toStartOf="@id/con_layout1"
                app:layout_constraintEnd_toEndOf="@id/con_layout1"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l2_con1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="9dp"
                    android:layout_weight="5.5">
                    <TextView
                        android:id="@+id/policy2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/suit_bold"
                        android:text="2.\t\t제3자 제공시 제공받는 자의 성명, 제공\n\t\t\t받는 자의 이용목적과 제공하는 항목"
                        android:textColor="@color/font"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l2_con2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/policy2_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/img_right_gray3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="정책2 버튼"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <View
                android:id="@+id/policy_l2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/gray3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear2" />

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/policy_l2"
                app:layout_constraintStart_toStartOf="@id/con_layout1"
                app:layout_constraintEnd_toEndOf="@id/con_layout1"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l3_con1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="9dp"
                    android:layout_weight="5.5">

                    <TextView
                        android:id="@+id/policy3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/suit_bold"
                        android:text="3.\t\t개인정보의 보유 및 이용 기간, 개인정보\n\t\t\t의 파기절차 및 파기 방법"
                        android:textColor="@color/font"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l3_con2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/policy3_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/img_right_gray3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="정책3 버튼"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <View
                android:id="@+id/policy_l3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/gray3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear3" />

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/policy_l3"
                app:layout_constraintStart_toStartOf="@id/con_layout1"
                app:layout_constraintEnd_toEndOf="@id/con_layout1"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l4_con1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="9dp"
                    android:layout_weight="5.5">

                    <TextView
                        android:id="@+id/policy4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/suit_bold"
                        android:text="4.\t\t개인정보 처리위탁을 하는 업무의 내용\n\t\t\t및 수탁자"
                        android:textColor="@color/font"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l4_con2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/policy4_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/img_right_gray3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="정책4 버튼"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <View
                android:id="@+id/policy_l4"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/gray3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear4" />

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/policy_l4"
                app:layout_constraintStart_toStartOf="@id/con_layout1"
                app:layout_constraintEnd_toEndOf="@id/con_layout1"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l5_con1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="9dp"
                    android:layout_weight="5.5">

                    <TextView
                        android:id="@+id/policy5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/suit_bold"
                        android:text="5.\t\t이용자 및 법정대리인의 권리와 그 행사\n\t\t\t방법"
                        android:textColor="@color/font"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l5_con2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/policy5_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/img_right_gray3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="정책5 버튼"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <View
                android:id="@+id/policy_l5"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/gray3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear5" />

            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/policy_l5"
                app:layout_constraintStart_toStartOf="@id/con_layout1"
                app:layout_constraintEnd_toEndOf="@id/con_layout1"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l6_con1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="9dp"
                    android:layout_weight="5.5">

                    <TextView
                        android:id="@+id/policy6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/suit_bold"
                        android:text="6.\t\t개인정보 자동수집 장치의 설치/운영 및\n\t\t\t거부에 관한 사항"
                        android:textColor="@color/font"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l6_con2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/policy6_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/img_right_gray3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="정책6 버튼"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <View
                android:id="@+id/policy_l6"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/gray3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear6" />
            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/policy_l6"
                app:layout_constraintStart_toStartOf="@id/con_layout1"
                app:layout_constraintEnd_toEndOf="@id/con_layout1"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l7_con1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="9dp"
                    android:layout_weight="5.5">

                    <TextView
                        android:id="@+id/policy7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/suit_bold"
                        android:text="7.\t\t개인정보 보호책임자 또는 담당자의 이\n\t\t\t름 및 연락처"
                        android:textColor="@color/font"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l7_con2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/policy7_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/img_right_gray3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="정책7 버튼"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageButton
            android:id="@+id/btn_ok"
            android:layout_width="219dp"
            android:layout_height="50dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/box_sub2_bttn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/con_layout"
            android:contentDescription="접근 권한 확인 버튼"/>
        <TextView
            android:id="@+id/txt_signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_semibold"
            android:text="닫기"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/btn_ok"
            app:layout_constraintEnd_toEndOf="@id/btn_ok"
            app:layout_constraintTop_toTopOf="@id/btn_ok"
            app:layout_constraintBottom_toBottomOf="@id/btn_ok"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>