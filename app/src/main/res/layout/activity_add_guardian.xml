<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    tools:context=".AddGuardActivity">

    <ImageButton
        android:id="@+id/left"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/img_left"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="뒤로 가기"/>

    <TextView
        android:id="@+id/txt_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/suit_bold"
        android:text="보호자 추가하기"
        android:textColor="@color/font"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/v1_main"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/left"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_layout1"
        android:layout_width="match_parent"
        android:layout_height="621dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/v1_main"
        app:layout_constraintHorizontal_bias="1.0">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/con_layout1"
            app:layout_constraintStart_toStartOf="@id/con_layout1"
            android:layout_marginTop="0dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profl_box1"
                android:layout_width="0dp"
                android:layout_height="95dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/profl_photo"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:src="@drawable/circle_sub3"
                    app:layout_constraintEnd_toEndOf="@id/profl_box1"
                    app:layout_constraintStart_toStartOf="@id/profl_box1"
                    app:layout_constraintTop_toTopOf="@id/profl_box1"/>
                <ImageView
                    android:id="@+id/profl_user_ic"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:src="@drawable/img_user"
                    app:layout_constraintStart_toStartOf="@id/profl_photo"
                    app:layout_constraintEnd_toEndOf="@id/profl_photo"
                    app:layout_constraintTop_toTopOf="@id/profl_photo"
                    app:layout_constraintBottom_toBottomOf="@id/profl_photo"
                    android:contentDescription="프로필 유저 아이콘"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linear1"
            app:layout_constraintStart_toStartOf="@id/linear1"
            android:layout_marginTop="24dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guard_box1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/add_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/box_sub2"
                    android:text="이름"
                    android:textSize="16dp"
                    android:fontFamily="@font/suit_semibold"
                    android:textColor="@color/gray2"
                    android:layout_gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/guard_box1_name"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linear2"
            app:layout_constraintStart_toStartOf="@id/linear2"
            android:layout_marginTop="24dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guard_box2_relat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!-- 가족 관계 선택을 위한 Spinner -->
                <Spinner
                    android:id="@+id/spinner_relationship"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/box_sub2"
                    android:text="사용자와의 관계"
                    android:textSize="16dp"
                    android:fontFamily="@font/suit_semibold"
                    android:textColor="@color/gray2"
                    android:entries="@array/relationship_array"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/guard_box2_relat"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linear3"
            app:layout_constraintStart_toStartOf="@id/linear3"
            android:layout_marginTop="24dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guard_box3_phonenum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <EditText
                android:id="@+id/add_phone_num"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/box_sub2"
                android:text="연락처"
                android:textSize="16dp"
                android:fontFamily="@font/suit_semibold"
                android:textColor="@color/gray2"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/guard_box3_phonenum"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/con_layout1"
            app:layout_constraintEnd_toEndOf="@id/con_layout1"
            app:layout_constraintBottom_toBottomOf="@id/con_layout1"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/guard_box4_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/add_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/box_sub2_bttn"
                    app:layout_constraintEnd_toEndOf="@id/guard_box4_btn"
                    app:layout_constraintStart_toStartOf="@id/guard_box4_btn"
                    app:layout_constraintBottom_toBottomOf="@id/guard_box4_btn"
                    android:contentDescription="로그인 버튼"/>
                <TextView
                    android:id="@+id/txt_add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/suit_semibold"
                    android:text="추가하기"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/add_btn"
                    app:layout_constraintEnd_toEndOf="@id/add_btn"
                    app:layout_constraintStart_toStartOf="@id/add_btn"
                    app:layout_constraintTop_toTopOf="@id/add_btn" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>