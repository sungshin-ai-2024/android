<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <CheckBox
                android:id="@+id/cb_medicine"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/check_selector"
                android:button="@null"
                android:layout_marginStart="2dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/cb"
                app:layout_constraintStart_toStartOf="@id/cb"/>
            <TextView
                android:id="@+id/ck_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suit_regular"
                android:text="약 이름"
                android:textColor="@color/font"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/cb_medicine"
                app:layout_constraintStart_toEndOf="@id/cb_medicine"
                app:layout_constraintBottom_toBottomOf="@id/cb_medicine"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv1_medicine_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/suit_regular"
                android:text="복용 시간"
                android:textColor="@color/font"
                android:textSize="12sp"
                android:background="@drawable/box_gray3"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/tv2_medicine_cycle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/suit_regular"
                android:text="주기"
                android:textColor="@color/font"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/box_gray3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>